{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false
  },
  "exclude": ["node_modules", "**/dist"]
}
