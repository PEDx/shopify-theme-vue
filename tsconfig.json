{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "build",
    "baseUrl": ".",
    "types": ["vite/client"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["**/dist", "**/node_modules"]
}
